<div class="container">
 <button data-target="modal1" class="btn">Comment on Spot</button>
 <div id="modal1" class="modal">
   <div class="modal-content">
     <h5>Comments</h5>
     <div class="row input-field col s6">
        <%=form_for Comment.new  do |f| %>
            <%= hidden_field_tag(:spot_id, @spot.id) %>
            <%= text_area_tag(:description, "", size: "24x6") %>
            <div class="modal-footer">
              <%= f.submit nil, class: "btn btn-primary" , value: "Save"%>
            </div>
        <% end %>
      </div>
   </div>
 </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $('.modal').modal();
    })
</script>
