<div class="container">
    <h2>User Details</h2>
    <hr>
    <% if @current_user == @user %>
      <%= link_to 'Edit profile', edit_user_path(@user) %>
    <% end %>

    <p>Email: <%= @user.email %> </p>

    <p>Name: <%= @user.name %> </p>

    <!-- <img src="<%= @user.image %>" alt=""> -->
    <%#= cl_image_tag @user.image %>
    <%= cl_image_tag( @user.image,
    :width=>200, :height=>200, :gravity=>"face", :radius=>"max", :effect=>"sharpen", :crop=>"thumb" )%>

</div>
